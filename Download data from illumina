### download and install the illumina tool
wget "https://api.bintray.com/content/basespace/BaseSpaceCLI-EarlyAccess-BIN/latest/\$latest/amd64-linux/bs?bt_package=latest" -O ./bin/bs
chmod u+x $HOME/bin/bs
wget https://api.bintray.com/content/basespace/BaseSpace-Copy-BIN/\$latest/linux/bscp?bt_package=develop -O bs-cp
chmod u+x bs-cp
### authenticate and go to the webpage click the button
bs auth
### see how many projects do we have
bs list projects
